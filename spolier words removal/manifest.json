{
   "name": "Word replacer",
   "version": "0.0.1",
   "description": "Replace particular words across the web",
   "manifest_version": 3,
   "host_permissions": [
      "<all_urls>"
   ],
   "permissions": [
      "scripting"
   ],
   "background": {
      "service_worker": "background.js"
   },
   "options_ui": {
      "page": "option.html"
   }
}