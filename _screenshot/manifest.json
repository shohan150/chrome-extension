{
   "manifest_version": 3,
   "name": "Screenshot Extension",
   "version": "1.0",
   "permissions": [
      "activeTab",
      "tabs",
      "downloads"
   ],
   "action": {
      "default_popup": "popup.html"
   },
   "web_accessible_resources": [
      {
         "resources": [
            "html2canvas.js"
         ],
         "matches": [
            "<all_urls>"
         ]
      }
   ],
   "content_scripts": [
      {
         "matches": [
            "<all_urls>"
         ],
         "js": [
            "content.js"
         ]
      }
   ]
}